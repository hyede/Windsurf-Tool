    <script>
        const API_BASE = './admin_version.php';
        
        function showStatus(message, type = 'success') {
            const status = document.getElementById('status');
            status.textContent = message;
            status.className = `status ${type}`;
            status.style.display = 'block';
            
            setTimeout(() => {
                status.style.display = 'none';
            }, 5000);
        }
        
        function getAdminToken() {
            return document.getElementById('adminToken').value;
        }
        
        async function loadConfig() {
            try {
                const token = getAdminToken();
                if (!token) {
                    showStatus('è¯·å…ˆè¾“å…¥ç®¡ç†å‘˜ä»¤ç‰Œ', 'error');
                    return;
                }
                
                const response = await fetch(`${API_BASE}?token=${encodeURIComponent(token)}`);
                const data = await response.json();
                
                if (data.success) {
                    displayConfig(data.config);
                    fillForm(data.config);
                    showStatus('é…ç½®åŠ è½½æˆåŠŸ');
                } else {
                    showStatus(data.message || 'åŠ è½½é…ç½®å¤±è´¥', 'error');
                }
            } catch (error) {
                showStatus('ç½‘ç»œé”™è¯¯: ' + error.message, 'error');
            }
        }
        
        function displayConfig(config) {
            const display = document.getElementById('configDisplay');
            display.innerHTML = `
                <div class="config-item"><strong>æœ€æ–°ç‰ˆæœ¬:</strong> ${config.latest_version || 'N/A'}</div>
                <div class="config-item"><strong>æœ€ä½æ”¯æŒç‰ˆæœ¬:</strong> ${config.min_supported_version || 'N/A'}</div>
                <div class="config-item"><strong>å¼ºåˆ¶æ›´æ–°:</strong> ${config.force_update ? 'æ˜¯' : 'å¦'}</div>
                <div class="config-item"><strong>ç»´æŠ¤æ¨¡å¼:</strong> ${config.maintenance?.enabled ? 'æ˜¯' : 'å¦'}</div>
                <div class="config-item"><strong>æœ€åæ›´æ–°:</strong> ${config.last_updated || 'N/A'}</div>
            `;
        }
        
        function fillForm(config) {
            document.getElementById('latestVersion').value = config.latest_version || '';
            document.getElementById('minSupportedVersion').value = config.min_supported_version || '';
            document.getElementById('forceUpdate').checked = config.force_update || false;
            document.getElementById('updateMessage').value = config.update_message || '';
            document.getElementById('maintenanceEnabled').checked = config.maintenance?.enabled || false;
            document.getElementById('maintenanceMessage').value = config.maintenance?.message || '';
        }
        
        async function saveConfig(event) {
            event.preventDefault();
            
            try {
                const token = getAdminToken();
                if (!token) {
                    showStatus('è¯·å…ˆè¾“å…¥ç®¡ç†å‘˜ä»¤ç‰Œ', 'error');
                    return;
                }
                
                const formData = {
                    latest_version: document.getElementById('latestVersion').value,
                    min_supported_version: document.getElementById('minSupportedVersion').value,
                    force_update: document.getElementById('forceUpdate').checked,
                    update_message: document.getElementById('updateMessage').value,
                    maintenance: {
                        enabled: document.getElementById('maintenanceEnabled').checked,
                        message: document.getElementById('maintenanceMessage').value
                    }
                };
                
                const response = await fetch(API_BASE, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Admin-Token': token
                    },
                    body: JSON.stringify(formData)
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showStatus('é…ç½®ä¿å­˜æˆåŠŸ');
                    displayConfig(data.config);
                } else {
                    showStatus(data.message || 'ä¿å­˜å¤±è´¥', 'error');
                }
            } catch (error) {
                showStatus('ç½‘ç»œé”™è¯¯: ' + error.message, 'error');
            }
        }
        
        async function resetConfig() {
            if (!confirm('ç¡®å®šè¦é‡ç½®é…ç½®å—ï¼Ÿæ­¤æ“ä½œä¸å¯æ¢å¤ï¼')) {
                return;
            }
            
            try {
                const token = getAdminToken();
                if (!token) {
                    showStatus('è¯·å…ˆè¾“å…¥ç®¡ç†å‘˜ä»¤ç‰Œ', 'error');
                    return;
                }
                
                const response = await fetch(API_BASE, {
                    method: 'DELETE',
                    headers: {
                        'X-Admin-Token': token
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showStatus('é…ç½®å·²é‡ç½®');
                    document.getElementById('configDisplay').innerHTML = 'é…ç½®å·²é‡ç½®ï¼Œè¯·é‡æ–°åŠ è½½';
                    document.getElementById('versionForm').reset();
                } else {
                    showStatus(data.message || 'é‡ç½®å¤±è´¥', 'error');
                }
            } catch (error) {
