            }
        }
        
        // ç»‘å®šäº‹ä»¶
        document.getElementById('versionForm').addEventListener('submit', saveConfig);
        
        // é¡µé¢åŠ è½½æ—¶å°è¯•åŠ è½½é…ç½®ï¼ˆå¦‚æœæœ‰ä»¤ç‰Œï¼‰
        window.addEventListener('load', () => {
            const savedToken = localStorage.getItem('adminToken');
            if (savedToken) {
